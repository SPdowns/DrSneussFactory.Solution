@{
  Layout = "_Layout";
}

@model DrSneussFactory.Models.Engineer

<h2>Edit this Engineer: @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.Name)<br>
  @Html.EditorFor(model => model.Name)<br>

  @Html.LabelFor(model => model.JobTitle)<br>
  @Html.EditorFor(model => model.JobTitle)<br>
  
  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Engineers", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
